# ================================
# LIFEOS ENVIRONMENT VARIABLES
# ================================

# Backend Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database (optional - default is SQLite)
# Uncomment for PostgreSQL in production:
# DATABASE_URL=postgresql://user:password@localhost:5432/lifeos

# ================================
# AI PROVIDER API KEYS (OPTIONAL)
# ================================
# You can configure these in the UI Settings page instead
# Uncomment and add your keys if you prefer environment variables

# Groq API
# GROQ_API_KEY=your-groq-api-key

# OpenAI API
# OPENAI_API_KEY=your-openai-api-key

# Anthropic API
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Together AI
# TOGETHER_API_KEY=your-together-api-key

# OpenRouter
# OPENROUTER_API_KEY=your-openrouter-api-key

# ================================
# FRONTEND CONFIGURATION (OPTIONAL)
# ================================

# Default AI provider (groq, openai, anthropic, together, openrouter)
# VITE_DEFAULT_PROVIDER=groq

# Default model name
# VITE_DEFAULT_MODEL=llama-3.1-70b-versatile
